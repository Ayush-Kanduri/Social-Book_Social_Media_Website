<link rel="stylesheet" href="/css/user_profile.css" />
<h3><%= title%></h3>

<div id="details">
	<table>
		<!-- If user matches then show the update form -->
		<% if(locals.user.id == profile_user.id){ %>
		<form action="/users/update/<%= profile_user.id %>" method="POST">
			<tr>
				<th>
					<span>Name:</span>
				</th>
				<td>
					<span
						>&nbsp;<input
							type="text"
							name="name"
							placeholder="Your Name"
							value="<%= profile_user.name %>"
							required
					/></span>
				</td>
			</tr>
			<tr>
				<th>
					<span>Email:</span>
				</th>
				<td>
					<span
						>&nbsp;<input
							type="email"
							name="email"
							placeholder="Your Email"
							value="<%= profile_user.email %>"
							required
					/></span>
				</td>
			</tr>
			<tr>
				<td colspan="3">
					<input type="submit" value="Update" />
				</td>
			</tr>
		</form>
		<% }else{ %>
		<!-- Else show only the profile information -->
		<tr>
			<th>
				<span>Name:</span>
			</th>
			<td><span>&nbsp;<%= profile_user.name%></span></td>
		</tr>
		<tr>
			<th>
				<span>Email:</span>
			</th>
			<td><span>&nbsp;<%= profile_user.email%></span></td>
		</tr>
		<tr>
			<td colspan="3">
				<button class="btn-grad" onclick="window.location='/';">
					Home Page
				</button>
			</td>
		</tr>
		<% } %>
	</table>
</div>
